@model ShareCircle.Models.Strosek

@{
    ViewBag.Title = "Dodaj Strošek";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Dodaj Nov Strošek</h4>
                </div>
                <div class="card-body">
                    <form asp-action="DodajStrosek" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="form-group mb-3">
                            <label asp-for="Naslov" class="form-label">Naslov Stroška</label>
                            <input asp-for="Naslov" class="form-control" id="Naslov" name="Naslov" value="@Model.Naslov"
                                required />
                            <span asp-validation-for="Naslov" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ID_placnika" class="form-label">Kdo je plačal?</label>
                            <select asp-for="ID_placnika" class="form-control" asp-items="ViewBag.Uporabniki"></select>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="CelotniZnesek" class="form-label">Znesek</label>
                            <input asp-for="CelotniZnesek" type="number" class="form-control"
                                placeholder="Vpišite znesek" required step="0.01" min="0.01" />
                            <span asp-validation-for="CelotniZnesek" class="text-danger"></span>
                        </div>

                        <input type="hidden" name="ID_skupine" value="@Model.ID_skupine" />

                        <div class="form-group text-center">
                            <input type="submit" value="Dodaj" class="btn btn-success" />
                            <a asp-action="Details" asp-route-id="@Model.ID_skupine"
                                class="btn btn-secondary ms-2">Nazaj</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        border-radius: 10px;
    }

    .card-header {
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
    }

    .form-control {
        border-radius: 5px;
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }

    .btn-success:hover {
        background-color: #218838;
        border-color: #1e7e34;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }
</style>
